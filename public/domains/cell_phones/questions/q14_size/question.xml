<?xml version="1.0"?>
<Question  is_exclusive="true" label="Do you have any size preferences?"  dimension="Hardware" weight="1">
    <Choice idurl="small" label="small" url_image="images/small.png" recommendation="featureIs(:form_factor, :clamshell)"/>
    <Choice idurl="compact" label="compact" url_image="images/compact.png" recommendation="featureIs(:device_height, :lessThan => 4)"/>
    <Choice idurl="large_screen" label="large screen" url_image="images/large_screen.png" recommendation="featureIs(:screen_size, :moreThan => 3.3)"/>
    <Choice idurl="large_keyboard" label="large keyboard" url_image="images/large_keyboard.png" recommendation="featureIs(:keyboard_type, :horizontal_qwerty) and productIs(:blackberry_bold)"/>
    <Choice idurl="slim" label="slim" url_image="images/slim.png" recommendation="featureIs(:device_depth, :lessThan => 0.5)"/>
</Question>
