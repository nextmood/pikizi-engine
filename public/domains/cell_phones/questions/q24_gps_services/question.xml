    <Choice idurl="location_based_services" label="location-based services" url_image="images/lbs.png" recommendation="featureIs(:gps_features, :any =>[:location_based_services, :location_based_apps])"/>
    <Choice idurl="familymap" label="family locator" url_image="images/familymap.png" recommendation="featureIs(:gps_features, :familymap)"/>
