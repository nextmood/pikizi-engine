<% form_tag "/products/update_value", :style => "border:1px solid black; padding:2px; background-color:pink;"  do -%>
    <%= hidden_field_tag "knowledge_id", knowledge.id %>
    <%= hidden_field_tag "product_id", product.id %>
    <%= hidden_field_tag "feature_idurl", feature.idurl %>
    <%= feature.get_value_edit_html(product) %>
    <hr/>
    <%= submit_tag "validate" %>
    <%= link_to_remote("cancel",
                          :url => {  :controller => "products",
                                     :action => "cancel_feature",
                                     :id => product.id,
                                     :feature_idurl => feature.idurl  },
                          :html => {  }) %>
<% end -%>