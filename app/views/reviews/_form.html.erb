
<p>about <b><%= review.products.collect(&:label).join(', ')  %></b></p>

<p>
  written on <%= select_date review.written_at, :prefix => :written_at %> 
  by <%= f.text_field :author, :size => 50 %>
</p>

<p>
  source<%= f.text_field :source, :size => 60 %>
  <%= f.select(:category, Review.categories_select)  %>
