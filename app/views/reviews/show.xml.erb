<Review id="<%= @review.id %>" product_idurl="<%= @review.product.idurl %>" category="<%= @review.category %>" written_at="<%= @review.written_at %>">
    <% if @review.rating %>
        <Rating value="<%= @review.rating %>" min="<%= @review.min_rating %>" max="<%= @review.max_rating %>"></Rating>
    <% end %>
    
    <% if @review.author or @review.source or @review.source_url %>
    <%= "<source>#{Root.encoder_html(@review.source)}</source>" if @review.source %>
    <%= "<author>#{Root.encoder_html(@review.author)}</author>" if @review.author %>
    <%= "<url>#{Root.encoder_html(@review.source_url)}</url>" if @review.source_url %>
    <% end %>

    <% if @review.summary %>
        <Summary><%= @review.summary %></Summary>
    <% end %>

    <paragraphs>
        <% for paragraph in @review.paragraphs %>
            <Paragraph>
                <%= Root.encoder_html(paragraph.content) %>
                <% for opinion in paragraph.opinions %>
                    <%= opinion.to_xml_api %>
                <% end %>
            </Paragraph>
        <% end %>
    </paragraphs>
</Review>

