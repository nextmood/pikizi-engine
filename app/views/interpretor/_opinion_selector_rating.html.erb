
<table  width="100%">
  <tr>
    <td width="320"  valign="top"><%= render(:partial => "/interpretor/products_selector", :locals => { :name => "referent", :opinion => opinion }) %></td>
    <td  align="center" valign="top" class="pkz_comparator_operator_type">is rated</td>
    <td width="320" valign="top">

        <%= text_field_tag :rating, opinion.rating, :size => 3, :onchange => remote_function(:url => {:action => "rating_toggle", :id => opinion.id, :field_name => "rating" }, :with => "'&value=' + this.value ") %>
        min=<%= text_field_tag :rating, opinion.min_rating, :size => 3, :onchange => remote_function(:url => {:action => "rating_toggle", :id => opinion.id, :field_name => "min_rating" }, :with => "'&value=' + this.value ") %>
        max=<%= text_field_tag :rating, opinion.max_rating, :size => 3, :onchange => remote_function(:url => {:action => "rating_toggle", :id => opinion.id, :field_name => "max_rating" }, :with => "'&value=' + this.value ") %>
        <br/><%= check_box_value_oriented(opinion, "margin-top:5px;") %>
    </td>
  </tr>

</table>