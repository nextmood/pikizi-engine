<% form_remote_tag :url => "/interpretor/add_product_by_shortcut" do -%>
    <%= hidden_field_tag :name, name %>
    <% is_first = true %>
    <% for shortcut_idurl, shortcut_label in ProductsByShortcut.shortcuts %>
        <%= radio_button_tag("#{name}_shortcut", shortcut_idurl, is_first) %><%= shortcut_label %><br/>
        <% is_first = false %>
    <% end %>
    <%= submit_tag "add" %>
    &nbsp;<%= link_to_remote("or cancel", :url => { :action => "cancel_product_selector", :id => name }, :html => {:style => "font-size:80%;"}) %>
<% end -%>