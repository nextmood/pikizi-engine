<% form_remote_tag :url => "/interpretor/add_product_by_label" do -%>
    name of product
    <%= text_field_with_auto_complete "product_#{name}", "label", {}, {:method => :get} %>
    and similar<%= check_box_tag "and_similar", nil, true %><%= submit_tag "add", :style => "margin-left:30px;" %>
    &nbsp;<%= link_to_remote("or cancel", :url => { :action => "cancel_product_selector", :id => name }, :html => {:style => "font-size:80%;"}) %>
<% end -%>