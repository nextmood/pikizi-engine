
    <% form_remote_tag(:url => "/interpretor/add_usage/#{opinion.id}", :html => {:id => "usages_form"} ) do -%>
        <table>
          <tr>
            <td valign="top" style="font-size:140%; font-weight:bold;" width="100">for usage</td>
            <td valign="top">
                <% for existing_usage in opinion.usages %>
                    <div style="margin-bottom:5px;">
                      <%= link_to_remote(image_tag("icons/status_icon_delete.png", :border => 0),
                                         :url => {:action => "remove_usage_from_opinion",
                                                  :id => opinion.id,
                                                  :usage_id => existing_usage.id}) %>
                      <%= existing_usage.label %>
                    </div>
                <% end %>

                <%= text_field_with_auto_complete("opinion", "new_usage", {:size => 40}, {:method => :get}) %>
                <%= submit_tag("add" , :style => "margin-left:0px; font-weight:bold; color:orange;") %>
            </td>
          </tr>
        </table>

    <% end -%>


