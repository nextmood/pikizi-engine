    <td><%= object_state(opinion) %></td>
    <td>
      <% if opinion.to_review? %>
        <%= link_to_remote(opinion.to_html, :url => { :controller => "opinions", :action => "edit_opinion_from_collection", :id => opinion.id }, :html => {:class => "pkz_link"}) %>
      <% else %>
        <%= opinion.to_html %>
      <% end %>
    </td>
    <td><%= opinion.original_import["op_score"] %></td>
    <td><%= opinion.op_conf %></td>
    <td><%= opinion.original_import["score"] %></td>
    <td align="right">
        <%= "<span class='pkz_small'>#{User.find(opinion.censor_author_id).rpx_username} on #{opinion.censor_date}: #{opinion.censor_comment}</span>" if opinion.censor_date %>
    </td>
