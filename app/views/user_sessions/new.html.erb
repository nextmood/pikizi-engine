<h1>Log In With An Existing Account!</h1>
<BR>
<%=RPXNow.embed_code('buyersvote',rpx_token_sessions_url)%>

<BR><BR><BR>
<h1>Or Login The Old Fashioned Way</h1>
<BR>
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages :header_message => nil %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %> <%= link_to "Forgot password?",
new_password_reset_path %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>

<% end %> 