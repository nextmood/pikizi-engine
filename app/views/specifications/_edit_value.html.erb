<% form_tag "/products/update_specification_value", :style => "border:1px solid black; padding:2px; background-color:pink;"  do -%>
    <%= hidden_field_tag "product_id", product.id %>
    <%= hidden_field_tag "feature_idurl", specification.idurl %>
    <%= specification.get_value_edit_html(product) %>
    <hr/>
    <%= submit_tag "validate" %>
    <%= link_to_remote("cancel",
                          :url => {  :controller => "products",
                                     :action => "cancel_specification",
                                     :id => product.id,
                                     :specification_id => specification.id  },
                          :html => {  }) %>
<% end -%>