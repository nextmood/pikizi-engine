

<div class="pkz_box">
    <div class="pkz_menu">
        <span>
          <%= @knowledge.label %>
          <small>
            #<%= @knowledge.key %>,&nbsp;
            <%= pluralize(@knowledge.nb_products, "product") %>,&nbsp;
            <%= pluralize(@knowledge.nb_features, "feature") %>,&nbsp;
            <%= link_to(pluralize(@knowledge.nb_questions, "question"), "/questions/#{@knowledge.key}") %>,&nbsp;
            <%= pluralize(@knowledge.nb_recommendation, "recommendation") %>,&nbsp;
            <%= pluralize(@knowledge.nb_quizzes, "quiz") %>
          </small>
        </span>
        &nbsp;|&nbsp;
        <%= link_to "back to model", "/show/#{@knowledge.key}" %>
    </div>

    <div class="pkz_main">
        <%= text_area_tag(:xml_form_knowledge, @knowledge.to_xml, :size => "120x30" ) %>
    </div>

</div>
