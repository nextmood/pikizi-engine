


<div class="pkz_box">

  <%= model_selector(@current_knowledge, :matrix) %>

  <div>
    <%= link_to_function("Expand all", "treetable_expandAll('thematrix');") %>
    &nbsp;|&nbsp;
    <%= link_to_function("Collapse all", "treetable_collapseAll('thematrix');") %>
    &nbsp;|&nbsp;
    <%= link_to_function("filter products...#{@products_selected.size}/#{@products.size}", "document.getElementById('select_products').toggle();") %>
  </div>

  <%= render(:partial => "/knowledges/products_selection",
        :locals => { :page_url => "/show/#{@current_knowledge.idurl}", :knowledge => @current_knowledge, :products => @products, :products_selected => @products_selected }) %>


    <%= render(:partial => "/knowledges/show",
            :locals => {:selected_products => @products_selected, :knowledge => @current_knowledge }) %>

</div>


