<% form_tag "/users/update_selection", :id => "select_products", :style => "display:none; border: 1px dashed black; margin:5px;" do -%>
    <%= text_field_tag "url_redirect", page_url %>
    <% for product in products %>
        <%= check_box_tag("product_ids_selected[]", product.id, products_selected.include?(product))  %><%= product.label %>&nbsp;
    <% end %>
    <%= submit_tag 'Save' %>
    <%= render(:partial => "/knowledges/select_all", :locals => {:name => "product_ids_selected"}) %>
<% end -%>