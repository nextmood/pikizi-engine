<% form_tag page_url, :id => "select_products", :style => "display:none; border: 1px dashed black; margin:5px;" do -%>
    <% for product in products %>
        <%= check_box_tag("select_product_idurls[]", product.idurl, products_selected.include?(product))  %><%= product.label %>&nbsp;
    <% end %>
    <%= submit_tag 'Save' %>
    <%= render(:partial => "/knowledges/select_all", :locals => {:name => "select_product_idurls"}) %>
<% end -%>