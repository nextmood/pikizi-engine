<script>
  function select_toggle(value)
  {
    check_boxes = document.getElementsByName('select_product_idurls[]');
    for(var i=0; i<check_boxes.length; i++) { check_boxes[i].checked = value; }
  }
</script>
<% form_tag page_url, :id => "select_products", :style => "display:none; border: 1px dashed black; margin:5px;" do -%>
    <% for product in products %>
        <%=  check_box_tag("select_product_idurls[]", product.idurl, products_selected.include?(product))  %><%= product.idurl %>&nbsp;
    <% end %>
    <%= submit_tag 'Save' %>
    <small>
        <%= link_to_function("select all", "select_toggle(true);")  %>
        &nbsp;
        <%= link_to_function("unselect all", "select_toggle(false);")  %>
    </small>

<% end -%>